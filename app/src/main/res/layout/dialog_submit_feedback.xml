<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/color_compliant" />

    <TextView
        android:id="@+id/dialog_submit_feedback_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="@string/submit_feedback_title"
        android:textAppearance="@style/Medium"
        android:textColor="@android:color/black"
        android:textSize="@dimen/bottom_text_size" />

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:padding="10dp"-->
        <!--android:text="@string/submit_feedback_email"-->
        <!--android:textAppearance="@style/Regular"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:textSize="@dimen/sub_header_text_size" />-->

    <!--<EditText-->
        <!--android:id="@+id/dialog_submit_feedback_ed_email"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginEnd="10dp"-->
        <!--android:layout_marginStart="10dp"-->
        <!--android:paddingStart="10dp"-->
        <!--android:paddingEnd="10dp"-->
        <!--android:background="@drawable/border_edit_text" />-->

    <TextView
        android:id="@+id/dialog_submit_feedback_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/submit_feedback_missing_desc"
        android:textAppearance="@style/Regular"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sub_header_text_size" />

    <EditText
        android:id="@+id/dialog_submit_feedback_ed_input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:gravity="top"
        android:background="@drawable/border_edit_text" />

    <TextView
        android:id="@+id/dialog_submit_feedback_tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/error_user_email_invalid"
        android:textAppearance="@style/Regular"
        android:textColor="@color/color_non_compliant"
        android:textSize="@dimen/sub_header_text_size"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/dialog_submit_feedback_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_round_dark_color"
                android:minWidth="120dp"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textAppearance="@style/Medium"
                android:textColor="@color/color_text_dark" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/dialog_submit_feedback_btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimary"
                android:minWidth="120dp"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textAppearance="@style/Medium"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>