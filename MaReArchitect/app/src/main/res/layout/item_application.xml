<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <View
        android:id="@+id/item_application_separate_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_border_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_application_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remitano 1.7.3"
                android:textAppearance="@style/Regular"
                android:textColor="@color/background_dark"
                android:textSize="@dimen/header_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_application_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/item_application_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Clean: 0/13"
                android:textAppearance="@style/Regular"
                android:textColor="@color/color_compliant"
                android:textSize="@dimen/header_text_size" />

            <!--<TextView-->
            <!--android:id="@+id/item_application_tv_last_scanned"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="LAST SCANNED: 07/15/2018"-->
            <!--android:gravity="end"-->
            <!--android:layout_gravity="end"-->
            <!--android:textColor="@color/color_text_gray"-->
            <!--android:textAppearance="@style/Regular"-->
            <!--android:textSize="@dimen/sub_header_text_size"/>-->

        </LinearLayout>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/item_application_img_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/loading" />

    </LinearLayout>

</LinearLayout>