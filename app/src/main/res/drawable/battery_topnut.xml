<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- my firt item with 4 corners radius(8dp)
     -->
    <item>
        <shape>
            <solid
                android:angle="270.0"
                android:color="#B2B2B2" />

            <corners android:topRightRadius="7dp" android:bottomRightRadius="7dp"/>
        </shape>
    </item>
    <!-- my second item is on top right for a fake corner radius(0dp)
     -->
    <item
        android:top="30dp"
        android:right="50dp">
        <shape>
            <solid android:color="@color/background_gray" />
        </shape>
    </item>
    <!-- my third item is on bottom left for a fake corner radius(0dp)
     -->
    <item
        android:right="50dp"
        android:bottom="30dp">
        <shape>
            <solid android:color="#B2B2B2" />
        </shape>
    </item>

</layer-list>
