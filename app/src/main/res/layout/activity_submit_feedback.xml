<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fm_slide_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="opswat.com.flow.submitFeedback.SubmitFeedbackActivity">

    <android.support.v7.widget.Toolbar
        style="@style/TitleStyle.StatusBar"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/feedback_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_back" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/feedback"
                android:textColor="@color/white"
                android:textSize="@dimen/title_detail_text_size" />

            <LinearLayout
                android:id="@+id/feedback_btn_love_it"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/color_text_green"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_love_it" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="@string/love_it"
                    android:textAppearance="@style/Regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_detail_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedback_btn_missing_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_missing" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="@string/missing_st"
                    android:textAppearance="@style/Regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_detail_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedback_btn_broken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/color_non_compliant"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_broken" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="@string/broken"
                    android:textAppearance="@style/Regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_detail_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/feedback_btn_include_log"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_checkbox"
                    android:tag="1" />

                <TextView
                    android:id="@+id/feedback_tv_include_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="@string/include_log"
                    android:textAppearance="@style/Regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/detail_text_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/feedback_tv_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/end_user_license_agreement"
                android:textAppearance="@style/Regular"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/detail_text_size" />

            <TextView
                android:id="@+id/feedback_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copyright"
                android:textAppearance="@style/Regular"
                android:textColor="@color/white"
                android:textSize="@dimen/detail_text_size" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
