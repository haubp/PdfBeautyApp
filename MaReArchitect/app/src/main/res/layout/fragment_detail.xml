<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_gray"
            android:paddingBottom="25dp"
            android:paddingTop="25dp">

            <RelativeLayout
                android:id="@+id/detail_header_with_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/detail_img_ic_cate"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_jailbreak_detail" />

                <ImageView
                    android:id="@+id/detail_img_ic_status"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="-40dp"
                    android:layout_marginTop="90dp"
                    android:layout_toEndOf="@id/detail_img_ic_cate"
                    android:src="@drawable/ic_good" />

                <TextView
                    android:id="@+id/detail_tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_img_ic_cate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textAppearance="@style/Medium"
                    android:textColor="@color/color_text_green"
                    android:textSize="@dimen/title_detail_text_size"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/detail_header_with_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/detail_tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Medium"
                    android:textColor="@color/color_text_green"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/detail_tv_value_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_tv_value"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Medium"
                    android:textColor="@color/color_text_green"
                    android:textSize="@dimen/detail_text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/detail_header_with_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="50dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/detail_tv_begin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/used"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Regular"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/detail_text_size" />

                <TextView
                    android:id="@+id/detail_tv_begin_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/detail_tv_begin"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Medium"
                    android:textColor="@color/color_text_green"
                    android:textSize="@dimen/detail_text_size" />

                <TextView
                    android:id="@+id/detail_tv_end_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Medium"
                    android:textColor="@color/color_text_green"
                    android:textSize="@dimen/detail_text_size" />

                <TextView
                    android:id="@+id/detail_tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/detail_tv_end_value"
                    android:text="@string/available"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Regular"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/detail_text_size" />

                <ProgressBar
                    android:id="@+id/detail_progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/detail_tv_begin"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/progress_bar_style_good" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/detail_header_with_battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="50dp"
                android:visibility="gone">

                <View
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_gray" />

                <ProgressBar
                    android:id="@+id/detail_progress_bar_battery"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/progress_bar_style_good" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/detail_progress_bar_battery"
                    android:background="@drawable/battery_topnut" />

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <include
                android:id="@+id/detail_jailbreak_good"
                layout="@layout/detail_jailbreak_good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_jailbreak_bad"
                layout="@layout/detail_jailbreak_bad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_password_good"
                layout="@layout/detail_password_good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_password_bad"
                layout="@layout/detail_password_bad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_os_good"
                layout="@layout/detail_os_good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_ad_tracking_good"
                layout="@layout/detail_ad_tracking_good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_ad_tracking_bad"
                layout="@layout/detail_ad_tracking_bad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_encryption_good"
                layout="@layout/detail_encrypt_good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_encryption_bad"
                layout="@layout/detail_encrypt_bad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_storage_good"
                layout="@layout/detail_free_storage_good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_storage_bad"
                layout="@layout/detail_free_storage_bad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_memory_good"
                layout="@layout/detail_memory_good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_memory_bad"
                layout="@layout/detail_memory_bad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_reboot_good"
                layout="@layout/detail_reboot_good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_reboot_bad"
                layout="@layout/detail_reboot_bad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_battery_good"
                layout="@layout/detail_battery_good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_battery_bad"
                layout="@layout/detail_battery_bad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_hardware_good"
                layout="@layout/detail_hardware_good"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/detail_hardware_bad"
                layout="@layout/detail_hardware_bad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <Button
                android:id="@+id/detail_btn_open_settings"
                android:text="@string/open_settings"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content">
            </Button>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
