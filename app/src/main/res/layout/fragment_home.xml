<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_gray">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/home_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_bottom_tab">

        <ScrollView
            android:id="@+id/home_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/main_header_unmanaged_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_background_dark_50"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/enroll_your_device"
                            android:textAlignment="center"
                            android:textAppearance="@style/Medium"
                            android:textColor="@color/color_text_gray_header"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/sub_title_detail_text_size" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/tab_plus"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/page_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_below="@+id/main_header_unmanaged_content">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/main_header_pager"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>

                        <android.support.design.widget.TabLayout
                            android:id="@+id/main_header_pager_tab_dots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabBackground="@drawable/tab_selector"
                            app:tabGravity="center"
                            app:tabIndicatorHeight="0dp"
                            app:tabMaxWidth="42px"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/home_content_security"
                        layout="@layout/fragment_security"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <include
                        android:id="@+id/home_content_health"
                        layout="@layout/fragment_health"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/home_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_btn_security"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/security"
            android:textAllCaps="true"
            android:textAppearance="@style/Medium"
            android:textColor="@color/white"
            android:textSize="@dimen/bottom_text_size" />

        <Button
            android:id="@+id/home_btn_health"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/background_gray"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/health"
            android:textAllCaps="true"
            android:textAppearance="@style/Medium"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/bottom_text_size" />

    </LinearLayout>

</RelativeLayout>